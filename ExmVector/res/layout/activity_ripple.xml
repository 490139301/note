<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <Button
        android:id="@+id/btn_ripple_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="无边界限制的水波"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_ripple_mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="有边界限制的水波(无按钮)"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_ripple_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="有边界限制的水波(有按钮)"
        android:textColor="#000000"
        android:textSize="17sp" />
    
    <com.example.exmvector.widget.RippleView
        android:id="@+id/rv_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

            <Button
                android:id="@+id/btn_ripple_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="自定义的水波动画"
                android:textColor="#000000"
                android:textSize="17sp" />

    </com.example.exmvector.widget.RippleView>

    <com.example.exmvector.widget.RippleGradient
        android:id="@+id/rv_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

            <Button
                android:id="@+id/btn_ripple_gradient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="会渐变的水波动画"
                android:textColor="#000000"
                android:textSize="17sp" />

    </com.example.exmvector.widget.RippleGradient>
    
    <ImageButton
        android:id="@+id/btn_gradient_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        android:text="渐变图形"
        android:textColor="#000000"
        android:textSize="17sp" />
    
</LinearLayout>