            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".InputLayoutActivity" android:theme="@style/AppDesignThemeLight" />
        <activity android:name=".InputEditActivity" android:theme="@style/AppCompatThemeLight" />
        <activity android:name=".PayPasswordActivity" android:theme="@style/AppCompatTheme" />
        <activity android:name=".KeyboardActivity" android:theme="@style/AppCompatTheme" />
        
    </application>

</manifest>
